\documentclass{article}
\usepackage{pgfplots}
\pgfplotsset{compat=1.18}
\usepackage[margin=1in]{geometry}
\usepackage{caption}

\begin{document}
	
	\section*{Social Return on Investment (SROI) – Summary (2012–2024)}
	
	\begin{figure}[h!]
		\centering
		\begin{tikzpicture}
			\begin{axis}[
				ybar,
				bar width=40pt,
				enlargelimits=0.3,
				ylabel={Amount (INR)},
				xlabel={Category},
				symbolic x coords={Total Investment, Total Social Return},
				xtick=data,
				nodes near coords,
				nodes near coords align={vertical},
				ymin=0,
				ymax=160000000,
				width=13cm,
				height=8cm,
				title={SROI Summary Chart},
				ymajorgrids=true,
				bar shift=0pt,
				]
				\addplot+[fill=blue!40] coordinates {
					(Total Investment, 4223690)
				};
				\addplot+[fill=green!60] coordinates {
					(Total Social Return, 152640000)
				};
			\end{axis}
		\end{tikzpicture}
		\caption{Total Investment Rs.42.23 Lakh vs Social Return Rs.15.26 Crore — SROI = 36.13}
	\end{figure}
	
\end{document}
